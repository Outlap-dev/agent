# PulseUp Agent Configuration
# Copy this file to .env and update the values
# SECURITY: Never commit .env files to version control

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# WebSocket server URL (required)
WEBSOCKET_URL=ws://localhost:3000/ws/agent_v2

# One-time enrollment token (required for initial setup)
# Get this from your PulseUp dashboard - only needed once
JOIN_TOKEN=your-join-token-here

# Auto-reconnection settings
RECONNECT_ENABLED=true
RECONNECT_INTERVAL=5
RECONNECT_MAX_ATTEMPTS=0
RECONNECT_BACKOFF_MAX=60

# Optional: Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Optional: Config file path (defaults to /etc/pulseup-agent/config)
CONFIG_PATH=/etc/pulseup-agent/config

# Optional: Override default database backup directory
# Defaults to /var/lib/pulseup/backups if not set
PULSEUP_BACKUP_DIR=/var/lib/pulseup/backups

# Debug mode deployment paths (only used when DEBUG=true)
DEBUG=false
DEBUG_DEPLOYMENT_DIR=./debug-deployments
DEBUG_CLONE_DIR=./debug-apps
DEBUG_DATA_DIR=./debug-data
DEBUG_LOG_DIR=./debug-logs 